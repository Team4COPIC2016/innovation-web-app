div(ng-if = "!loading")
  table(class="table table-striped")
    thead
      tr
        th(colspan="4")
          h1 My tasks
      tr
        th Name
        th Description
        th Project
    tbody
      tr(ng-repeat="task in tasks")
        td {{employee.employee_first_name}}
        td {{employee.employee_last_name}}
        td {{employee.employee_location}}
        td {{employee.employee_job_title}}
        td {{employee.employee_is_manager}}
        td {{employee.employee_is_executive}}
